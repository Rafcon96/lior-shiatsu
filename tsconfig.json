{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["payload/*"],
      "@payload-config": ["payload.config.ts"]
    },
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["payload.config.ts", "payload/**/*.ts"],
  "exclude": ["node_modules"]
}
